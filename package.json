{
  "name": "lgu-employee-portal",
  "version": "1.0.0",
  "description": "LGU Daet Employee Portal Frontend",
  "main": "index.js",
  "scripts": {
    "init:tailwind": "tailwindcss init",
    "build:css": "tailwindcss -i ./input.css -o ./public/css/style.css",
    "build": "npm run build:css",
    "watch": "tailwindcss -i ./input.css -o ./public/css/style.css --watch",
    "serve": "npx http-server ./public -p 5501",
    "dev": "concurrently \"npm:watch\" \"npm:serve\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "daisyui": "^4.12.10",
    "tailwindcss": "^3.4.6"
  }
}
